{
  "manifest_version": 3,
  "name": "Smart Form Autofill (N2O)",
  "version": "1.3.0",
  "description": "Интеллектуальное автозаполнение форм N2O / Zireael",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "fill-form-hotkey": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Заполнить форму"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
